@model SignInModel

<h1>Sign in</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-controller="@RouteConstants.SignInController" method="post">
                <h4>Use a local account to sign in.</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>                
                </div>               
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
                <div class="form-group">
                    <p>

                        <a href="/Identity/Account/ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-controller="@RouteConstants.SignUpController">Sign up as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>Use another service to sign in.</h4>
            <hr />
            <div>
                <p>
                    There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                    for details on setting up this ASP.NET application to support logging in via external services.
                </p>
            </div>
        </section>
    </div>
</div>